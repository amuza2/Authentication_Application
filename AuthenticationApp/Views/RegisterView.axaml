<UserControl
    d:DesignHeight="950"
    d:DesignWidth="700"
    mc:Ignorable="d"
    x:Class="AuthenticationApp.Views.RegisterView"
    x:DataType="vm:RegisterViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:AuthenticationApp.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Design.DataContext>
        <vm:RegisterViewModel />
    </Design.DataContext>


    <Border>
        <Border.Background>
            <LinearGradientBrush EndPoint="100%,100%" StartPoint="0%,0%">
                <GradientStop Color="#667eea" Offset="0" />
                <GradientStop Color="#764ba2" Offset="1" />
            </LinearGradientBrush>
        </Border.Background>

        <Border
            Classes="card"
            Margin="10"
            VerticalAlignment="Center">

            <StackPanel HorizontalAlignment="Center" Spacing="25">
                <!--  User icon circle  -->
                <Border Classes="user-circle">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="100%,100%" StartPoint="0%,0%">
                            <GradientStop Color="#667eea" Offset="0" />
                            <GradientStop Color="#764ba2" Offset="1" />
                        </LinearGradientBrush>
                    </Border.Background>
                    <PathIcon
                        Data="{StaticResource person_add_regular}"
                        Foreground="White"
                        Height="40"
                        Width="40" />
                </Border>

                <TextBlock
                    FontSize="28"
                    FontWeight="Bold"
                    Foreground="#2c3e50"
                    HorizontalAlignment="Center"
                    Text="Register" />

                <!--  First name  -->
                <StackPanel Spacing="8">
                    <TextBlock
                        FontWeight="SemiBold"
                        Foreground="#2c3e50"
                        Text="First name" />
                    <TextBox
                        Background="Transparent"
                        BorderBrush="#e1e8ed"
                        Padding="15,12"
                        Text="{Binding FirstName}"
                        Watermark="Enter you first name" />
                </StackPanel>

                <!--  Last name  -->
                <StackPanel Spacing="8">
                    <TextBlock
                        FontWeight="SemiBold"
                        Foreground="#2c3e50"
                        Text="Last name" />
                    <TextBox
                        Background="Transparent"
                        BorderBrush="#e1e8ed"
                        Padding="15,12"
                        Text="{Binding LastName}"
                        Watermark="Enter you lasts name" />
                </StackPanel>

                <!--  Email  -->
                <StackPanel Spacing="5">
                    <TextBlock
                        FontWeight="SemiBold"
                        Foreground="#2c3e50"
                        Text="Email" />
                    <TextBox
                        Background="Transparent"
                        BorderBrush="#e1e8ed"
                        Foreground="#2c3e50"
                        Padding="15,12"
                        Text="{Binding Email}"
                        Watermark="Enter you email" />
                </StackPanel>

                <!--  Password  -->
                <StackPanel Spacing="8">
                    <TextBlock
                        FontWeight="SemiBold"
                        Foreground="#2c3e50"
                        Text="Password" />

                    <TextBox
                        Background="Transparent"
                        BorderBrush="#e1e8ed"
                        Foreground="#2c3e50"
                        Padding="15,12"
                        PasswordChar="•"
                        Text="{Binding Password}"
                        Watermark="Enter you password" />
                </StackPanel>

                <!--  Confirm Password  -->
                <StackPanel Spacing="8">
                    <TextBlock
                        FontWeight="SemiBold"
                        Foreground="#2c3e50"
                        Text="Confirm Password" />
                    <TextBox
                        Background="Transparent"
                        BorderBrush="#e1e8ed"
                        Foreground="#2c3e50"
                        Padding="15,12"
                        PasswordChar="•"
                        Text="{Binding ConfirmPassword}"
                        Watermark="Confirm password" />
                </StackPanel>

                <!--  Error message  -->
                <Border Classes="error-message-bg" IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock
                            FontSize="16"
                            Text="⚠️"
                            VerticalAlignment="Center" />
                        <TextBlock
                            FontSize="13"
                            Foreground="#dc2626"
                            Text="{Binding ErrorMessage}"
                            TextWrapping="Wrap"
                            VerticalAlignment="Center" />
                    </StackPanel>
                </Border>

                <!--  Register button  -->
                <Button
                    Classes="modern-button"
                    Command="{Binding RegisterCommand}"
                    Content="Register"
                    CornerRadius="12"
                    Cursor="Hand"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Height="50"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    IsVisible="{Binding !IsLoading}"
                    VerticalContentAlignment="Center" />

                <!--  Loading bar  -->
                <Border
                    CornerRadius="12"
                    Height="10"
                    HorizontalAlignment="Stretch"
                    IsVisible="{Binding IsLoading}">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="100%,100%" StartPoint="0%,0%">
                            <GradientStop Color="#667eea" Offset="0" />
                            <GradientStop Color="#764ba2" Offset="1" />
                        </LinearGradientBrush>
                    </Border.Background>
                    <ProgressBar
                        Foreground="White"
                        Height="10"
                        IsIndeterminate="True" />
                </Border>

                <!--  Divider  -->
                <Border
                    Background="#e1e8ed"
                    Height="1"
                    Margin="20,10" />

                <!--  navigate to register  -->
                <StackPanel Orientation="Horizontal" Spacing="5">
                    <TextBlock
                        FontSize="14"
                        Foreground="#7f8c8d"
                        Text="have you an account?" />
                    <Button
                        Background="Transparent"
                        BorderThickness="0"
                        Classes="modern-button"
                        Command="{Binding NavigateToLoginCommand}"
                        Content="Login here"
                        Cursor="Hand"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Padding="4,0">
                        <Button.Foreground>
                            <LinearGradientBrush EndPoint="100%,100%" StartPoint="0%,0%">
                                <GradientStop Color="#667eea" Offset="0" />
                                <GradientStop Color="#764ba2" Offset="1" />
                            </LinearGradientBrush>
                        </Button.Foreground>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </Border>

</UserControl>
