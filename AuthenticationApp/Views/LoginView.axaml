<UserControl
    d:DesignHeight="650"
    d:DesignWidth="700"
    mc:Ignorable="d"
    x:Class="AuthenticationApp.Views.LoginView"
    x:DataType="vm:LoginViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:AuthenticationApp.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Design.DataContext>
        <vm:LoginViewModel />
    </Design.DataContext>


    <!--  Beautiful gradient background  -->
    <Border>
        <Border.Background>
            <LinearGradientBrush EndPoint="100%,100%" StartPoint="0%,0%">
                <GradientStop Color="#667eea" Offset="0" />
                <GradientStop Color="#764ba2" Offset="1" />
            </LinearGradientBrush>
        </Border.Background>

        <!--  Main login card  -->
        <Border
            Classes="card"
            HorizontalAlignment="Center"
            Margin="10"
            VerticalAlignment="Center">

            <StackPanel Spacing="25">
                <!--  Welcome section with icon  -->
                <StackPanel HorizontalAlignment="Center" Spacing="10">
                    <!--  User icon circle  -->
                    <Border Classes="user-circle" Margin="0,0,0,10">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="100%,100%" StartPoint="0%,0%">
                                <GradientStop Color="#667eea" Offset="0" />
                                <GradientStop Color="#764ba2" Offset="1" />
                            </LinearGradientBrush>
                        </Border.Background>
                        <PathIcon
                            Data="{StaticResource person_regular}"
                            Foreground="White"
                            Height="40"
                            Width="40" />
                    </Border>

                    <TextBlock
                        FontSize="32"
                        FontWeight="Bold"
                        Foreground="#2c3e50"
                        HorizontalAlignment="Center"
                        Text="Welcome Back" />

                    <TextBlock
                        FontSize="14"
                        Foreground="#7f8c8d"
                        HorizontalAlignment="Center"
                        Text="Sign in to continue to your account" />
                </StackPanel>

                <!--  Email field  -->
                <StackPanel Spacing="8">
                    <TextBlock
                        FontWeight="SemiBold"
                        Foreground="#2c3e50"
                        Text="Email Address" />
                    <TextBox Text="{Binding Email}" Watermark="Enter your email" />
                </StackPanel>

                <!--  Password field  -->
                <StackPanel Spacing="8">
                    <TextBlock
                        FontWeight="SemiBold"
                        Foreground="#2c3e50"
                        Text="Password" />
                    <TextBox
                        PasswordChar="•"
                        Text="{Binding Password}"
                        Watermark="Enter your password" />
                </StackPanel>

                <!--  Error message with icon  -->
                <Border Classes="error-message-bg" IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock
                            FontSize="16"
                            Text="⚠️"
                            VerticalAlignment="Center" />
                        <TextBlock
                            FontSize="13"
                            Foreground="#dc2626"
                            Text="{Binding ErrorMessage}"
                            TextWrapping="Wrap"
                            VerticalAlignment="Center" />
                    </StackPanel>
                </Border>

                <!--  Login button with gradient  -->
                <Button
                    Classes="modern-button"
                    Command="{Binding LoginCommand}"
                    Content="Sign In"
                    CornerRadius="12"
                    Cursor="Hand"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Height="50"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    IsVisible="{Binding !IsLoading}"
                    VerticalContentAlignment="Center" />

                <!--  Loading indicator  -->
                <Border
                    CornerRadius="12"
                    Height="10"
                    HorizontalAlignment="Stretch"
                    IsVisible="{Binding IsLoading}">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="100%,100%" StartPoint="0%,0%">
                            <GradientStop Color="#667eea" Offset="0" />
                            <GradientStop Color="#764ba2" Offset="1" />
                        </LinearGradientBrush>
                    </Border.Background>
                    <ProgressBar
                        Foreground="White"
                        Height="10"
                        IsIndeterminate="True" />
                </Border>

                <!--  Divider  -->
                <Border
                    Background="#e1e8ed"
                    Height="1"
                    Margin="20,10" />

                <!--  navigate to login  -->
                <StackPanel
                    HorizontalAlignment="Center"
                    Orientation="Horizontal"
                    Spacing="5">
                    <TextBlock
                        FontSize="14"
                        Foreground="#64748b"
                        Text="Don't have an account?" />
                    <Button
                        Background="Transparent"
                        BorderThickness="0"
                        Classes="modern-button"
                        Command="{Binding NavigateToRegisterCommand}"
                        Content="Create Account"
                        Cursor="Hand"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Padding="4,0">
                        <Button.Foreground>
                            <LinearGradientBrush EndPoint="100%,100%" StartPoint="0%,0%">
                                <GradientStop Color="#667eea" Offset="0" />
                                <GradientStop Color="#764ba2" Offset="1" />
                            </LinearGradientBrush>
                        </Button.Foreground>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </Border>

</UserControl>
